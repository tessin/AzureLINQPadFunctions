<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <TargetFramework>net461</TargetFramework>
    <ApplicationIcon />
    <OutputType>Library</OutputType>
    <StartupObject />
    <Version>1.0.4</Version>
    <PackageId>CloudPad</PackageId>
    <Authors>Tessin Nordic AB</Authors>
    <Description>Run LINQPad scripts as Azure funcitons.</Description>
    <RepositoryUrl></RepositoryUrl>
    <PackageProjectUrl>https://github.com/tessin/cloud-pad</PackageProjectUrl>
    <PackageTags>LINQPad Azure</PackageTags>

    <AllowedOutputExtensionsInPackageBuildOutputFolder>$(AllowedOutputExtensionsInPackageBuildOutputFolder);.pdb</AllowedOutputExtensionsInPackageBuildOutputFolder>

    <Copyright>Tessin Nordic AB</Copyright>

    <AssemblyVersion>1.0.4.0</AssemblyVersion>
  </PropertyGroup>

    <!--include in NuGet package--> 
    <ItemGroup>
        <BuildOutputInPackage Include="$(OutputPath)Interop.IWshRuntimeLibrary.dll" />
    </ItemGroup>

  <ItemGroup>
    <None Remove="proxy.linq" />
  </ItemGroup>

  <ItemGroup>
    <COMReference Include="IWshRuntimeLibrary.dll">
      <Guid>f935dc20-1cf0-11d0-adb9-00c04fd58a0b</Guid>
      <VersionMajor>1</VersionMajor>
      <VersionMinor>0</VersionMinor>
      <WrapperTool>tlbimp</WrapperTool>
      <Lcid>0</Lcid>
      <Isolated>false</Isolated>
    </COMReference>
  </ItemGroup>

  <ItemGroup>
    <EmbeddedResource Include="proxy.linq" />
  </ItemGroup>

  <ItemGroup>
    <PackageReference Include="Microsoft.AspNet.WebApi.Core" Version="5.2.3" />
    <PackageReference Include="ncrontab" Version="3.3.0" />
    <PackageReference Include="Newtonsoft.Json" Version="9.0.1" />
  </ItemGroup>

  <ItemGroup>
    <Reference Include="System.IO.Compression" />
    <Reference Include="System.Security" />
  </ItemGroup>

</Project>
