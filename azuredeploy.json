{
  "$schema": "https://schema.management.azure.com/schemas/2015-01-01/deploymentTemplate.json#",
  "contentVersion": "1.0.0.0",
  "parameters": {
    "name": {
      "defaultValue": "linqpad",
      "type": "string"
    },
    "location": {
      "defaultValue": "northeurope",
      "type": "string"
    },
    "sku": {
      "defaultValue": "dynamic",
      "type": "string",
      "allowedValues": [
        "dynamic",
        "basic"
      ]
    }
  },
  "variables": {
    "storageAccount-name": "[concat('azfn', parameters('name'), uniqueString(resourceGroup().id))]",
    "fileShare-name": "[concat('azfn-', parameters('name'), '-files-', uniqueString(resourceGroup().id))]", // the file share is created externally but will use this name
    "webPlan-name": "[concat('azfn-', parameters('name'), '-web-plan-', uniqueString(resourceGroup().id))]",
    "webPlan-sku-dynamic": {
      "name": "Y1",
      "tier": "Dynamic",
      "size": "Y1",
      "family": "Y",
      "capacity": 0
    },
    "webPlan-sku-basic": {
      "name": "B1",
      "tier": "Basic",
      "size": "B1",
      "family": "B",
      "capacity": 1
    },
    "webPlan-sku": "[variables(concat('webPlan-sku-', parameters('sku')))]",
    "webPlan-properties-dynamic": {
      "numberOfWorkers": 0
    },
    "webPlan-properties-basic": {
      "numberOfWorkers": 1
    },
    "webPlan-properties": "[variables(concat('webPlan-properties-', parameters('sku')))]",
    "webApp-name": "[concat('azfn-', parameters('name'), '-web-app-', uniqueString(resourceGroup().id))]",
    "webApp-properties-dynamic": {
      "serverFarmId": "[resourceId('Microsoft.Web/serverfarms', variables('webPlan-name'))]",
    },
    "webApp-properties-basic": {
      "serverFarmId": "[resourceId('Microsoft.Web/serverfarms', variables('webPlan-name'))]",
      "alwaysOn": true
    },
    "webPlan-properties": "[variables(concat('webApp-properties-', parameters('sku')))]"
  },
  "resources": [
    {
      "type": "Microsoft.Storage/storageAccounts",
      "sku": {
        "name": "Standard_LRS",
        "tier": "Standard"
      },
      "kind": "Storage",
      "name": "[variables('storageAccount-name')]",
      "apiVersion": "2016-01-01",
      "location": "[parameters('location')]"
    },
    {
      "type": "Microsoft.Web/serverfarms",
      "name": "[variables('webPlan-name')]",
      "sku": "[variables('webPlan-sku')]",
      "kind": "functionapp",
      "apiVersion": "2015-08-01",
      "location": "[parameters('location')]",
      "properties": "[variables('webPlan-properties')]"
    },
    {
      "type": "Microsoft.Web/sites",
      "kind": "functionapp",
      "name": "[variables('webApp-name')]",
      "apiVersion": "2015-08-01",
      "location": "[parameters('location')]",
      "properties": "[variables('webApp-properties')]",
      "dependsOn": [
        "[resourceId('Microsoft.Web/serverfarms', variables('webPlan-name'))]"
      ]
    }
  ],
  "outputs": {
    "storageAccount-name": {
      "type": "string",
      "value": "[variables('storageAccount-name')]"
    },
    "fileShare-name": {
      "type": "string",
      "value": "[variables('fileShare-name')]"
    },
    "webPlan-name": {
      "type": "string",
      "value": "[variables('webPlan-name')]"
    },
    "webPlan-sku": {
      "type": "string",
      "value": "[variables('webPlan-sku')]"
    },
    "webPlan-properties": {
      "type": "string",
      "value": "[variables('webPlan-properties')]"
    },
    "webApp-name": {
      "type": "string",
      "value": "[variables('webApp-name')]"
    }
  }
}